command -v exa > /dev/null 2>&1 && alias ls="exa"

alias l="ls -Fl"
alias ll="ls -Fl"
alias lisa="ls -Flia"
alias la="exa -abghl --git --color=automatic"
alias gl="exa -lF --git --color=automatic"
alias gla="exa -alF --git --color=automatic"
alias glog="git log --format=\'%Cgreen%h%Creset %C(cyan)%an%Creset - %s\' --graph"
alias flog="git log --all --graph --decorate=full"
alias hoogle="hoogle --color"
alias cninja="cmake -DCMAKE_C_COMPILER=clang -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_INSTALL_PREFIX=../install -G Ninja .."
alias tmux="tmux -2"
alias g="git"
alias c="pygmentize -O style=algol -f console256 -g"
alias ccat="pygmentize -O style=algol -f console256 -g"
alias formatc="find . -iname \"*.h\" -o -iname \"*.c\" | xargs clang-format -i"
alias formatcc="find . -iname \"*.hh\" -o -iname \"*.cc\" | xargs clang-format -i"
alias compile_database="ln -s $PWD/build/compile_commands.json src/"
